{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "../",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false,
    "sourceMap": true,
    "removeComments": true
  },
  "include": [
    "web-server/src/**/*", 
    "src/types/**/*",
    "src/connections/**/*",
    "src/extractors/**/*", 
    "src/comparators/**/*",
    "src/reporters/**/*",
    "src/utils/**/*",
    "src/app.ts"
  ],
  "exclude": ["node_modules", "dist", "src/cli/**/*", "web-ui/**/*"]
}